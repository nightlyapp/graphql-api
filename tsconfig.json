{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@root/*": ["./src/*"],
      "@models/*": ["./src/db/models/*"]
    },
    "strict": true,
    "target": "es6",
    "types": ["node","jest"]
  },
  "exclude": ["node_modules", "**/*.test.ts", "./dist", "website"]
}
