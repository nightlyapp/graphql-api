{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "#root/*": ["./src/*"]
    },
    "strict": true,
    "target": "es6",
    "types": ["node"]
  },
  "exclude": ["node_modules", "**/*.test.ts", "./dist", "website"]
}
